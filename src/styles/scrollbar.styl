::-webkit-scrollbar {
  /*高宽分别对应横竖滚动条的尺寸*/
  width: 10px;
  height: 8px;

  &-thumb {
    /*滚动条里面小方块*/
    border-radius: 0;
    background-color: rgba(0, 0, 0, 0.5);
  }

  &-track {
    /*滚动条里面轨道*/
    box-shadow: inset 0 0 5px rgba(0, 0, 0, 0.2);
    border-radius: 0;
    background-color: #EDEDED;
  }
}
